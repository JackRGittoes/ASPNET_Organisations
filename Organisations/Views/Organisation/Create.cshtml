@model OrganisationsDetail.Models.Organisation
<br />
<h2 class="text-info">@(Model.Id!=0 ? "Edit" : "Create") Organisation</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        @if (Model.Id != 0)
        {
<input type="hidden" asp-for="Id" />}
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="OrgName"></label>
            </div>
            <div class="col-6">
                <input asp-for="OrgName" class="form-control" />
                <span asp-validation-for="OrgName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="OrgCode"></label>
            </div>
            <div class="col-6">
                <input asp-for="OrgCode" class="form-control" />
                <span asp-validation-for="OrgCode" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="IsHQ"></label>
            </div>
            <div class="col-6">
                <input type="checkbox" asp-for="IsHQ" class="text-left input-group-lg" />
                <span asp-validation-for="IsHQ" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}